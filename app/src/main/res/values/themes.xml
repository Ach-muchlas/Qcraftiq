<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.FinalProject" parent="Theme.Material3.DayNight">

    </style>

    <style name="TextContent">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <!--text title-->
    <style name="TextContent.Headline">
        <item name="fontFamily">@font/mon_bold</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.HeadlineMedium</item>
    </style>

    <!--text body-->
    <style name="TextContent.Body">
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyMedium</item>
    </style>

    <style name="TextContent.Body.MonMedium">
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="fontFamily">@font/mon_reg</item>
    </style>

    <style name="TextContent.Body.MonBold">
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="fontFamily">@font/mon_bold</item>
    </style>

    <style name="TextContent.Body.PopMedium">
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="fontFamily">@font/pop_medium</item>
    </style>

    <style name="TextContent.Body.PopSemiBold">
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="fontFamily">@font/pop_semi_bold</item>
    </style>

    <style name="TextContent.Body.PopBold">
        <item name="android:layout_marginLeft">28dp</item>
        <item name="android:layout_marginRight">28dp</item>
        <item name="fontFamily">@font/pop_bold</item>
    </style>

    <!--small sp without ignore-->
    <style name="TextContent.Body.MonMedium.SmallSp">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextContent.Body.MonBold.SmallSp">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextContent.Body.MonMedium.ExtraSmallSp">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextContent.Body.MonBold.ExtraSmallSp">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="TextContent.Headline.SmallSp">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="TabLayoutContent">
        <item name="tabBackground">@drawable/custom_tab_selector</item>
        <item name="tabGravity">fill</item>
        <item name="tabMode">scrollable</item>
        <item name="tabIndicatorAnimationMode">elastic</item>
        <item name="tabSelectedTextColor">@color/white</item>
    </style>

    <style name="EditTextContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="fontFamily">@font/pop_medium</item>
        <item name="android:background">@drawable/custom_bg_edt</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="ButtonContent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:background">@drawable/custom_bg_edt</item>
        <item name="android:backgroundTint">@color/dark_blue</item>
        <item name="android:elevation">10dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">23sp</item>
    </style>


    <style name="Theme.FinalProject" parent="Base.Theme.FinalProject" />

</resources>