<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:id="@+id/itemStudyMaterial">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardNumberContent"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:backgroundTint="@color/grey"
            app:cardCornerRadius="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/textViewNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/mon_reg"
                android:text="@string/_1" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textViewTitleVideo"
            style="@style/TextContent.Body.MonMedium"
            android:layout_marginStart="10dp"
            android:text="@string/example_title_material"
            app:layout_constraintBottom_toBottomOf="@id/cardNumberContent"
            app:layout_constraintStart_toEndOf="@id/cardNumberContent"
            app:layout_constraintTop_toTopOf="@id/cardNumberContent" />

        <ImageView
            android:id="@+id/imageViewVideoPlayer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:contentDescription="@string/icon_video_player"
            android:src="@drawable/video_player"
            app:layout_constraintBottom_toBottomOf="@id/cardNumberContent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/cardNumberContent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>