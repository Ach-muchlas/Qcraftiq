<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewChapter"
        style="@style/TextContent.Headline.SmallSp"
        android:layout_marginTop="10dp"
        android:text="@string/example_chapter"
        android:textColor="@color/dark_blue"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewTime"
        style="@style/TextContent.Headline.SmallSp"
        android:layout_marginEnd="20dp"
        android:text="@string/example_time"
        android:textColor="@color/dark_blue"
        app:layout_constraintBottom_toBottomOf="@id/textViewChapter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/textViewChapter" />
</androidx.constraintlayout.widget.ConstraintLayout>