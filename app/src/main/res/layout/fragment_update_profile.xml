<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_bg">

    <ImageView
        android:id="@+id/imageViewButtonBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginTop="14dp"
        android:contentDescription="@string/button_back"
        android:src="@drawable/arrow_left"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewPhotoProfile"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:contentDescription="@string/account"
        android:src="@drawable/account_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewButtonBack" />

    <TextView
        android:id="@+id/textViewName"
        style="@style/TextContent.Body.PopMedium"
        android:layout_marginTop="15dp"
        android:text="@string/name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageViewPhotoProfile" />

    <EditText
        android:id="@+id/edtName"
        style="@style/EditTextContent2"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="5dp"
        android:autofillHints="name"
        android:inputType="textPersonName"
        android:text="@string/example_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewName" />

    <TextView
        android:id="@+id/textViewEmail"
        style="@style/TextContent.Body.PopMedium"
        android:layout_marginTop="10dp"
        android:text="@string/email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtName" />

    <EditText
        android:id="@+id/edtEmail"
        style="@style/EditTextContent2"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="5dp"
        android:autofillHints="emailAddress"
        android:inputType="textEmailAddress"
        android:text="@string/example_email_2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewEmail" />

    <TextView
        android:id="@+id/textViewPhone"
        style="@style/TextContent.Body.PopMedium"
        android:layout_marginTop="10dp"
        android:text="@string/phone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtEmail" />

    <EditText
        android:id="@+id/edtPhone"
        style="@style/EditTextContent2"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="5dp"
        android:autofillHints="phone"
        android:inputType="phone"
        android:text="@string/example_phone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewPhone" />

    <TextView
        android:id="@+id/textViewCountry"
        style="@style/TextContent.Body.PopMedium"
        android:layout_marginTop="10dp"
        android:text="@string/country"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtPhone" />

    <EditText
        android:id="@+id/edtCountry"
        style="@style/EditTextContent2"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="5dp"
        android:autofillHints="country"
        android:hint="@string/input_country_of_residence"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewCountry" />

    <TextView
        android:id="@+id/textViewCity"
        style="@style/TextContent.Body.PopMedium"
        android:layout_marginTop="10dp"
        android:text="@string/city"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtCountry" />

    <EditText
        android:id="@+id/edtCity"
        style="@style/EditTextContent2"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="5dp"
        android:autofillHints="city"
        android:hint="@string/input_city_of_residence"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textViewCity" />

    <Button
        android:id="@+id/buttonSaveMyProfile"
        style="@style/ButtonContent"
        android:layout_marginHorizontal="26dp"
        android:layout_marginTop="35dp"
        android:elevation="20dp"
        android:textAppearance="@style/TextContent.Body.MonMedium"
        android:text="@string/save_my_profile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edtCity" />


</androidx.constraintlayout.widget.ConstraintLayout>