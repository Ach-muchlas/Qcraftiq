<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/light_blue_bg"
    tools:context=".ui.detailPayment.DetailPaymentFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBtnBack"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/light_blue_bg">

            <ImageView
                android:id="@+id/imageViewBtnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:importantForAccessibility="no" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCourse"
        android:layout_width="match_parent"
        android:layout_height="220dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:elevation="10dp"
        app:cardCornerRadius="10dp"
        android:padding="5dp"
        app:layout_constraintTop_toBottomOf="@id/cardViewBtnBack">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewCourse"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:scaleType="center"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@tools:sample/backgrounds/scenic"
                android:contentDescription="@string/course_image_view" />

            <TextView
                android:id="@+id/textViewTitleCourse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/ui_ux_design"
                android:fontFamily="@font/mon_bold"
                android:textSize="16sp"
                android:textColor="@color/dark_blue"
                app:layout_constraintTop_toBottomOf="@id/imageViewCourse"
                app:layout_constraintStart_toStartOf="parent"/>

            <TextView
                android:id="@+id/textViewDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/intro_basic_ui"
                android:fontFamily="@font/mon_bold"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewTitleCourse"/>

            <TextView
                android:id="@+id/textViewAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/simon_doe_author"
                android:fontFamily="@font/mon_reg"
                android:textSize="12sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewDesc"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                app:dividerColor="@color/grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewAuthor"/>

            <TextView
                android:id="@+id/textViewPriceTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:text="@string/price"
                android:fontFamily="@font/mon_bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider"/>

            <TextView
                android:id="@+id/textViewPriceRupiah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/rupiah"
                android:fontFamily="@font/mon_reg"
                app:layout_constraintTop_toBottomOf="@id/textViewPriceTitle"
                app:layout_constraintStart_toStartOf="@id/textViewPriceTitle"/>

            <TextView
                android:id="@+id/textViewPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_349_000"
                android:fontFamily="@font/mon_reg"
                android:layout_marginStart="4dp"
                app:layout_constraintStart_toEndOf="@id/textViewPriceRupiah"
                app:layout_constraintTop_toTopOf="@id/textViewPriceRupiah"/>

            <TextView
                android:id="@+id/textViewPpnTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/mon_bold"
                android:text="@string/ppn_11"
                app:layout_constraintEnd_toStartOf="@+id/textViewTotalTitle"
                app:layout_constraintStart_toEndOf="@+id/textViewPriceTitle"
                app:layout_constraintTop_toBottomOf="@+id/divider" />

            <TextView
                android:id="@+id/textViewPpnRupiah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rupiah"
                android:fontFamily="@font/mon_reg"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="@id/textViewPpnTitle"
                app:layout_constraintTop_toBottomOf="@id/textViewPpnTitle"/>

            <TextView
                android:id="@+id/textViewPpn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="4dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/mon_reg"
                android:text="@string/_38_390"
                app:layout_constraintStart_toEndOf="@id/textViewPpnRupiah"
                app:layout_constraintTop_toBottomOf="@id/textViewPpnTitle" />

            <TextView
                android:id="@+id/textViewTotalTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="70dp"
                android:fontFamily="@font/mon_bold"
                android:text="@string/total"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/divider" />

            <TextView
                android:id="@+id/textViewTotalRupiah"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rupiah"
                android:fontFamily="@font/mon_bold"
                android:textColor="@color/dark_blue"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/textViewTotalTitle"
                app:layout_constraintStart_toStartOf="@id/textViewTotalTitle"/>

            <TextView
                android:id="@+id/textViewTotal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_387_390"
                android:fontFamily="@font/mon_bold"
                android:textColor="@color/dark_blue"
                android:layout_marginStart="2dp"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toEndOf="@id/textViewTotalRupiah"
                app:layout_constraintTop_toBottomOf="@id/textViewTotalTitle"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewBankTransfer"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/green"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewCourse">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textViewBankTransfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/bank_transfer"
                android:fontFamily="@font/mon_bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="TextContrastCheck"/>

            <ImageView
                android:id="@+id/imageViewArrowDown"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/arrow_down"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:importantForAccessibility="no"
                tools:ignore="ImageContrastCheck"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewCreditCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="5dp"
        android:backgroundTint="@color/dark_blue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cardViewBankTransfer">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/fixedLayoutCredit"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                android:id="@+id/textViewCreditCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="@string/credit_card"
                android:fontFamily="@font/mon_bold"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                tools:ignore="TextContrastCheck"/>

                <ImageView
                android:id="@+id/imageViewArrowUp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/arrow_up"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:importantForAccessibility="no"
                tools:ignore="ImageContrastCheck"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardViewExpandCredit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/white"
                android:visibility="visible"
                app:layout_constraintTop_toBottomOf="@id/fixedLayoutCredit">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/textViewCardNumber"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="@font/mon_reg"
                        android:text="@string/card_number"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"/>

                    <EditText
                        android:id="@+id/edtCardNumber"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:inputType="number"
                        android:hint="@string/_3550_0000_0000_0000"
                        android:textSize="12sp"
                        android:textColorHint="@color/deep_grey"
                        android:importantForAutofill="no"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewCardNumber"
                        tools:ignore="TextContrastCheck,LabelFor,SpeakableTextPresentCheck,VisualLintTextFieldSize"/>

                    <TextView
                        android:id="@+id/textViewCardHolder"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/card_holder_name"
                        android:fontFamily="@font/mon_reg"
                        android:layout_marginStart="16dp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/edtCardNumber"/>

                    <EditText
                        android:id="@+id/edtCardHolder"
                        android:layout_width="match_parent"
                        android:layout_height="48dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginEnd="16dp"
                        android:inputType="text"
                        android:hint="@string/jeff_bezos"
                        android:textColorHint="@color/deep_grey"
                        android:textSize="12sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewCardHolder"
                        android:importantForAutofill="no"
                        tools:ignore="TextContrastCheck,LabelFor,SpeakableTextPresentCheck,VisualLintTextFieldSize"/>

                    <TextView
                        android:id="@+id/textViewCardCcv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:text="@string/ccv"
                        android:fontFamily="@font/mon_reg"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/edtCardHolder"/>

                    <EditText
                        android:id="@+id/edtCardCvv"
                        android:layout_width="144dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginStart="16dp"
                        android:inputType="text"
                        android:hint="@string/dot3"
                        android:textSize="12sp"
                        android:textColorHint="@color/deep_grey"
                        android:importantForAutofill="no"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/textViewCardCcv"
                        tools:ignore="LabelFor,SpeakableTextPresentCheck,VisualLintTextFieldSize"/>

                    <TextView
                        android:id="@+id/textViewExpire"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/expire_date"
                        android:fontFamily="@font/mon_reg"
                        android:textColor="@color/black"
                        android:layout_marginStart="144dp"
                        app:layout_constraintStart_toEndOf="@id/textViewCardCcv"
                        app:layout_constraintTop_toBottomOf="@id/edtCardHolder"/>

                    <EditText
                        android:id="@+id/edtExpire"
                        android:layout_width="144dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:inputType="date"
                        android:hint="@string/_08_24"
                        android:textSize="12sp"
                        android:textColorHint="@color/deep_grey"
                        android:importantForAutofill="no"
                        app:layout_constraintStart_toStartOf="@id/textViewExpire"
                        app:layout_constraintTop_toBottomOf="@id/textViewCardCcv"
                        tools:ignore="TextContrastCheck,LabelFor,SpeakableTextPresentCheck,VisualLintTextFieldSize"/>

                    <ImageView
                        android:id="@+id/imageViewCreditCard"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/payment_options"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/edtCardCvv"
                        android:contentDescription="@string/image_credit_card" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/buttonPayment"
        android:layout_width="350dp"
        android:layout_height="55dp"
        android:layout_marginBottom="16dp"
        android:text="@string/text_button_payment"
        android:fontFamily="@font/mon_bold"
        android:drawableEnd="@drawable/arrow_right_white"
        android:textColor="@color/white"
        android:backgroundTint="@color/red"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="VisualLintButtonSize"/>


</androidx.constraintlayout.widget.ConstraintLayout>